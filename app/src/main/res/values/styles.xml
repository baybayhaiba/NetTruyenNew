<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!-- Text Size -->
        <item name="android:textSize">@dimen/textSizePrimary</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/gray</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/white</item>
        <!-- Background Color -->
        <item name="android:background">@color/black</item>
    </style>


    <style name="ScrollToTop">
        <item name="minimumScroll">250dp</item>
        <item name="heavyCheckup">true</item>
        <item name="android:padding">4dp</item>
    </style>



    <style name="toolbar_under" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
    </style>

</resources>